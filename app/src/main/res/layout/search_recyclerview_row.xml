<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_from_parents">

        <TextView
            android:id="@+id/office_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/between_icon_margin"
            android:layout_marginRight="@dimen/between_icon_margin"
            android:text="부서명"
            android:textColor="@color/bold"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/building_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/between_icon_margin"
            android:text="위치"
            android:textColor="@color/light"
            android:textSize="11sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>